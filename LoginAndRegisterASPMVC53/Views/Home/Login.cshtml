@model LoginAndRegisterASPMVC5.Models.UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<body class="gradient-page">

    <div class="d-flex justify-content-center">
        <div class="card position-absolute top-50 start-50 translate-middle p-1 rounded-3" style="width: 36rem;">
            <div class="card-body">

                <div class="text-center">
                    <p class="fs-1 fw-bold mb-0">MLM</p>
                    <p class="fs-5 fw-light">Service Monitoring System</p><hr />
                    <p class="fs-2 fw-normal">Sign in</p>
                </div>

                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group m-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label mb-2" })
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })

                        </div>

                        <div class="form-group m-3">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label mb-2" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", id = "password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
                        </div>

                        <div class="form-group m-3">
                            <input type="checkbox" id="togglePassword" />
                            <label for="togglePassword">Show password</label>
                            <br />
                            <div class="text-center my-3">
                                <button type="submit" name="submit" class="btn btn-primary mb-4 " value="Login">Login</button>
                            </div>
                        </div>

                        <div class="signup_link">
                            <div class="pass"><a href="#">Forgot Password?</a></div>
                            Don't have an account?'
                            <asp:LinkButton ID="SignupLink" runat="server" value="Signup" Text="Signup"><a href="@Url.Action("Register", "Home")">Signup</a></asp:LinkButton>
                        </div>
                    }
            </div>
        </div>
    </div>
</body>

<script>
    const togglePassword = document.getElementById("togglePassword");
    const password = document.getElementById("password");

    togglePassword.addEventListener("change", function () {
        if (togglePassword.checked) {
            password.type = "text";
        } else {
            password.type = "password";
        }
    });
</script>

